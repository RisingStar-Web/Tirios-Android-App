            android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="25dp" android:topRightRadius="25dp"
                android:bottomLeftRadius="25dp" android:bottomRightRadius="25dp"/>        </shape>
    </item>
</layer-list>
