<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/darker_gray" />
            <corners android:topLeftRadius="0dp" android:topRightRadius="5dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp"/>
        </shape>
    </item>
    <item android:right="2dp" android:left="0dp" android:bottom="3dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="0dp" android:topRightRadius="5dp"
                android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp"/>        </shape>
    </item>
</layer-list>
